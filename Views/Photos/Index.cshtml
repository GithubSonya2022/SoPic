@model IEnumerable<SoPic.Data.Models.Photo>

@{
    ViewData["Title"] = "Index";
}

<h1>All My Photos</h1>


     @{
                 if (User.Identities.FirstOrDefault()?.Name == "so@mail.bg")
                 {
                    <p> 
                    <a asp-action="Create">Create New</a>   |
                    <a asp-action="Sold">Sold</a>
                    </p>        
                 }
       }

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
                
            <td>
                <img class ="img-responsive" src="@Url.Content(item.ImageUrl)" alt="@item.Title" style="width:300px;height:200px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
             @{
                 if (User.Identities.FirstOrDefault()?.Name == "so@mail.bg")
                 {
                          <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit </a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>   |
                            <a asp-action="Buy" asp-route-id="@item.Id">Buy</a>                 
                        </td>
                 }
                 else
                 {
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Buy" asp-route-id="@item.Id">Buy</a>                 
                        </td>
                 }
               }  
        </tr>
}
    </tbody>
</table>
